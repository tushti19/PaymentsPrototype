<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveOrdersHomePage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:elevation="10dp"
        android:background="@drawable/live_orders"
        android:id="@+id/upperLyout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/live_orders_text"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newi"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"/>

    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:layout_below="@id/upperLyout"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="70dp"
        android:divider="@android:color/transparent"
        android:id="@+id/listview"/>
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/live_orders_bottom_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="Please wait while your Documents get uploaded"
            android:textColor="#000000"
            android:visibility="gone"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12dp"/>

    </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:id="@+id/add_button"
            android:elevation="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_file_live_orders" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/add_photos"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_photo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="110dp"
            android:id="@+id/add_photos_text"
            android:text="Photos"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/poppins"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/add_files"
            android:background="@drawable/add_file" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="110dp"
            android:id="@+id/add_files_text"
            android:text="Files"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/poppins" />

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></eightbitlab.com.blurview.BlurView>



</RelativeLayout>