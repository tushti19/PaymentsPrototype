                    <!--                    <stroke android:width="2dp" android:color="#6B6767" />-->
                    <corners android:radius="48dp" />
                    <padding android:bottom="0dp" />

                </shape>
            </item>

            <!-- Originally i set the bottom to 10 px but adding an elevation to a relative layout works perfect when
            bottom is set to 0 px-->
<!--            <item android:drawable="@drawable/orderstatustopview"  android:bottom="10px" />-->
